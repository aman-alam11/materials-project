        <!--android:id="@+id/brightness_fab"-->
        <!--android:layout_width="@dimen/fab_width"-->
        <!--android:layout_height="@dimen/fab_height"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:alpha="@dimen/card_detail_alpha"-->
